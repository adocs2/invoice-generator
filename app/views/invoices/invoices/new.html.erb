<h1>Nova Invoice</h1>

<%= form_with(model: @invoice, url: invoices_create_and_send_email_path, method: :post) do |form| %>
  <div class="form-group">
    <%= form.label :number, 'Número: ' %>
    <%= form.text_field :number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :date, 'Data: ' %>
    <%= form.date_field :date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :company, 'Empresa: ' %>
    <%= form.text_area :company, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :billing_to, 'Cobrança para: ' %>
    <%= form.text_area :billing_to, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :total_amount, 'Valor total: ' %>
    <%= form.text_field :total_amount, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :emails, 'Emails (separe por vírgulas):' %>
    <%= form.text_field :emails, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Criar Invoice', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Voltar para listagem', invoices_path %>
