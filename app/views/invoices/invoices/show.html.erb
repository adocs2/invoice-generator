<h1>Detalhes da Invoice</h1>

<table class="table">
  <tbody>
    <tr>
      <th>Número</th>
      <td><%= @invoice.number %></td>
    </tr>
    <tr>
      <th>Data</th>
      <td><%= @invoice.date %></td>
    </tr>
    <tr>
      <th>Empresa</th>
      <td><%= @invoice.company %></td>
    </tr>
    <tr>
      <th>Cobrança para</th>
      <td><%= @invoice.billing_to %></td>
    </tr>
    <tr>
      <th>Valor total</th>
      <td><%= @invoice.total_amount %></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Voltar para a listagem', invoices_path %>
