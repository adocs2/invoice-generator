<%= form_tag(users_generate_token_and_send_activation_path, method: :post) do %>
  <div class="form-group">
    <%= label_tag(:email, 'Email:') %>
    <%= email_field_tag(:email, nil, class: 'form-control') %>
  </div>

  <div class="form-group">
    <%= submit_tag('Gerar Token', class: 'btn btn-primary') %>
  </div>
<% end %>

<%= link_to 'Log In', root_path %>
