<!DOCTYPE html>
<html>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Bem-vindo ao Gerador de Invoices</h1>

    <div class="row justify-content-center mt-5">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h3 class="text-center">Gerar novo token</h3>
            <%= form_tag users_generate_and_send_activation_path, method: :post, class: "mt-3" do %>
              <div class="form-group">
                <label for="email">Email:</label>
                <%= text_field_tag :email, nil, class: "form-control" %>
              </div>
              <%= submit_tag 'Gerar novo token', class: "btn btn-primary btn-block" %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h3 class="text-center">Login com token</h3>
            <%= form_tag users_login_with_token_path, method: :post, class: "mt-3" do %>
              <div class="form-group">
                <label for="token">Token:</label>
                <%= text_field_tag :token, nil, class: "form-control" %>
              </div>
              <%= submit_tag 'Login com token', class: "btn btn-success btn-block" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
